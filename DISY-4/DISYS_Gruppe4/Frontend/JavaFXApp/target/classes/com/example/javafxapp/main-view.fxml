<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafxapp.MainController"
      spacing="10" alignment="CENTER">

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <Button text="Lade aktuelle Daten" onAction="#loadCurrentData"/>
    <Button text="Lade historische Daten" onAction="#loadHistoricalData"/>

    <Label fx:id="outputLabel" text="Ausgabe erscheint hier" wrapText="true"/>
</VBox>
